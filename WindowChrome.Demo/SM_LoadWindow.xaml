<Window x:Class="WindowChrome.Demo.SM_LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowChrome.Demo"
        mc:Ignorable="d" Height="614.608" Width="493.23" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid x:Name="SM_LoadWindowMainGrid">
        <Grid.Background>
            <ImageBrush ImageSource="Background.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="561*"/>
        </Grid.RowDefinitions>
        <TextBox TextWrapping="Wrap" Text="начните вводить название заклинания" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="#FF1B191D" Margin="4" Height="22">
            <TextBox.Foreground>
                <SolidColorBrush Color="{DynamicResource MainColor}"/>
            </TextBox.Foreground>
        </TextBox>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0" Grid.RowSpan="2" Grid.Row="1">
            <DockPanel LastChildFill="False" Margin="4"/>
        </ScrollViewer>
    </Grid>
</Window>
